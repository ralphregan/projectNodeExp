<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<body class="d-flex justify-content-center align-items-center" style="height: 100vh;">

    <form action="/profile" method="POST" class="form-signin d-flex-column justify-content-center">
        <div class="form-label-group d-flex justify-content-between mb-3">
            <label for="name"></label>
            <input type="text" id="fName" name="fName" class="form-control ml-2" placeholder="First name" required
                autofocus></input>
            <label for="lName"></label>
            <input type="text" id="lName" name="lName" class="form-control" placeholder="Last name" required></input>
        </div>
        <div class="mb-3">
            <label for="email"></label>
            <input type="text" id="email" name="email" class="form-control" placeholder="Email" required></input>
        </div>
        <div class="mb-3">
            <label for="password"></label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Password"
                required></input>
        </div>

        <button type="submit" class="btn btn-success btn-md mt-2" id="start-btn">START</button>
    </form>

    <%- include("partials/footer.ejs") %>
</body>