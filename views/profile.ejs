<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<%- include("partials/profile-header.ejs") %>

    <div class="container">
        <% if(locals.data){ %>
            <h1 class="mb-4">Welcome <%= data %>
            </h1>


            <% } %>
                <a href="/profile/new" class="btn btn-success"> New</a>

                <% articles.forEach(article=> { %>
                    <div class="card mt-4">
                        <div class="card-body">
                            <div class="card-title lead">
                                <h1>
                                    <%= article.title %>
                                </h1>
                            </div>

                            <div class="card-subtitle text-muted mt-4">
                                <%= article.CreatedTime.toLocaleDateString() %>
                            </div>
                            <div class="card-text mt-4">
                                <%= article.description %>
                            </div>
                            <a href="/profile/<%=article.slug %>" class="btn btn-primary mt-3">Read More</a>
                            <form action="/profile/<%= article.id %>?_method=DELETE" method="POST" class="d-inline"> 
                                <button type="submit" class="mt-3 btn btn-danger"> Delete</button>
                            </form>
                        </div>

                    </div>

                    <% }); %>
    </div>